<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:layout_marginBottom="2dp"
    app:cardCornerRadius="3dp" app:cardUseCompatPadding="true">

    <com.unitor.k1a2.unitorm.view.CheckView
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="5dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:id="@+id/FragDial_file_Image_select"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/FragDial_file_name_select"
            android:textSize="22dp"
            android:text="dddddddd"
            android:layout_weight="1"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="0sp"
            android:text="ddddddd"
            android:id="@+id/FragDial_file_path_select"
            android:visibility="gone"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/round_play_arrow_black_48"
            android:background="#00000000"
            android:id="@+id/list_button_play"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/Fragdial_file_isSelect"/>

    </com.unitor.k1a2.unitorm.view.CheckView>

</android.support.v7.widget.CardView>